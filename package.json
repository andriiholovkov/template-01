{
  "name": "template-01",
  "version": "0.1.2",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "eslint-plugin-node": "^11.1.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "5.0.1",
    "sass": "^1.51.0",
    "typescript": "^4.6.4",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "release": "standard-version",
    "commit": "cz",
    "prettier": "prettier --write ./src",
    "lint": "eslint src -c .eslintrc.js --ext js,jsx",
    "lint:fix": "eslint ./src --fix --ext .js,.jsx,.tsx,.ts --color",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn lint:fix",
      "yarn prettier",
      "git add"
    ],
    "*.{md,json}": [
      "yarn prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "maxHeaderWidth": 100,
      "maxLineWidth": 100,
      "types": {
        "feat": {
          "description": "A new feature",
          "title": "Features"
        },
        "style": {
          "description": "Improving structure / format ot the code",
          "title": "Style"
        },
        "fix": {
          "description": "A bug fix",
          "title": "Fix"
        },
        "quickfix": {
          "description": "A critical hotfix",
          "title": "Quickfix"
        },
        "review": {
          "description": "Updating code due to code review changes",
          "title": "Review"
        },
        "refactor": {
          "description": "A code change that neither fixes a bug nor adds a feature",
          "title": "Refactor"
        },
        "config": {
          "description": "Changing configuration files",
          "title": "Config"
        },
        "perf": {
          "description": "A code change that improves performance",
          "title": "Performance"
        },
        "merge": {
          "description": "Merging branches",
          "title": "Merge"
        },
        "docs": {
          "description": "Documentation only changes",
          "title": "Documentation"
        },
        "deploy": {
          "description": "Deploying stuff",
          "title": "Deploy"
        },
        "prune ": {
          "description": "Removing code or files",
          "title": "Prune"
        },
        "test": {
          "description": "Adding missing test or correcting test",
          "title": "Test"
        },
        "revent": {
          "description": "Revets a previous commit",
          "title": "Revent"
        },
        "ci": {
          "description": "Changes to our CI configuration files and scripts",
          "title": "CI"
        },
        "chore": {
          "description": "Other changes that don't modify src or test files",
          "title": "Chore"
        }
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "standard-version": "^9.3.2",
    "typescript-eslint": "^0.0.1-alpha.0"
  }
}
